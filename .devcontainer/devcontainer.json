{
  "name": "AniDesk Codespaces",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "features": {
    "ghcr.io/devcontainers-contrib/features/pnpm:latest": {},
    "ghcr.io/thatvegandev/devcontainers/features/bun:1": {}
  },
  "postCreateCommand": "pnpm install --global bun && pnpm install && cd apps/api-proxy && bun install && cd ../desktop && pnpm install && pnpm run build && pnpm run test",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "ms-vscode-remote.remote-containers",
        "eg2.vscode-npm-script"
      ],
      "settings": {
        "files.autoSave": "onWindowChange"
      }
    }
  },
  "forwardPorts": [3030, 5173],
  "openFiles": [
    "README.md",
    "apps/desktop/src/App.tsx"
  ]
}
